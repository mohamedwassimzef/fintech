<?xml version="1.0" encoding="UTF-8"?>

<!--
  Improved UI Layout – Asset Manager
  Paired with styles.css dark theme
-->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="710.0" prefWidth="760.0" stylesheets="@styles.css"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.MainController">
    <children>

        <!-- ── Menu Bar ──────────────────────────────────────── -->
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New" />
                        <MenuItem mnemonicParsing="false" text="Open…" />
                        <Menu mnemonicParsing="false" text="Open Recent" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Close" />
                        <MenuItem mnemonicParsing="false" text="Save" />
                        <MenuItem mnemonicParsing="false" text="Save As…" />
                        <MenuItem mnemonicParsing="false" text="Revert" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Preferences…" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Quit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Undo" />
                        <MenuItem mnemonicParsing="false" text="Redo" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Cut" />
                        <MenuItem mnemonicParsing="false" text="Copy" />
                        <MenuItem mnemonicParsing="false" text="Paste" />
                        <MenuItem mnemonicParsing="false" text="Delete" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Select All" />
                        <MenuItem mnemonicParsing="false" text="Unselect All" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <!-- ── Tab Pane ──────────────────────────────────────── -->
        <TabPane fx:id="mainTabs" tabClosingPolicy="UNAVAILABLE"
                 VBox.vgrow="ALWAYS">
            <tabs>

                <!-- ─ Asset Form Tab ───────────────────────────── -->
                <Tab fx:id="assetFormTab" text="Asset Form">
                    <content>
                        <AnchorPane>
                            <children>
                                <VBox styleClass="form-container"
                                      AnchorPane.topAnchor="40.0"
                                      AnchorPane.leftAnchor="60.0"
                                      AnchorPane.rightAnchor="60.0"
                                      AnchorPane.bottomAnchor="40.0"
                                      maxWidth="420.0"
                                      spacing="2.0">
                                    <children>
                                        <Label text="NAME" />
                                        <TextField fx:id="AssName" promptText="e.g. Company Vehicle" />

                                        <Label text="TYPE" />
                                        <TextField fx:id="AssType" promptText="e.g. Vehicle, Property…" />

                                        <Label text="VALUE" />
                                        <TextField fx:id="AssValue" promptText="0.00" />

                                        <Label text="DESCRIPTION" />
                                        <TextField fx:id="AssDesc" promptText="Short description" />


                                        <Label text="USER ID" />
                                        <TextField fx:id="AssUser" promptText="User identifier" />

                                        <Label text="CREATED AT" visible="false" />
                                        <DatePicker fx:id="AssCreated" visible="false" prefWidth="356.0" />

                                        <Region prefHeight="12.0" />

                                        <Button fx:id="SubAsset" text="Submit Asset"
                                                mnemonicParsing="false"
                                                onAction="#handleSubmitButton"
                                                prefWidth="356.0" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- ─ Asset List Tab ───────────────────────────── -->
                <Tab fx:id="assetListTab" text="Asset List">
                    <content>
                        <AnchorPane>
                            <children>
                                <TableView fx:id="assetsTable"
                                           AnchorPane.topAnchor="30.0"
                                           AnchorPane.leftAnchor="40.0"
                                           AnchorPane.rightAnchor="40.0"
                                           AnchorPane.bottomAnchor="70.0">
                                    <columns>
                                        <TableColumn fx:id="colId" prefWidth="60.0" text="ID" visible="false" />
                                        <TableColumn fx:id="colName" prefWidth="140.0" text="Name" />
                                        <TableColumn fx:id="colType" prefWidth="100.0" text="Type" />
                                        <TableColumn fx:id="colValue" prefWidth="100.0" text="Value" />
                                        <TableColumn fx:id="colDescription" prefWidth="160.0" text="Description" />
                                        <TableColumn fx:id="colCreatedAt" prefWidth="140.0" text="Created At" />
                                        <TableColumn fx:id="colUserId" prefWidth="80.0" text="User ID" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>

                                <!-- Action buttons row -->
                                <HBox spacing="12.0"
                                      AnchorPane.bottomAnchor="14.0"
                                      AnchorPane.leftAnchor="40.0"
                                      AnchorPane.rightAnchor="40.0">
                                    <children>
                                        <Button fx:id="updateAssetButton" disable="true"
                                                mnemonicParsing="false"
                                                onAction="#handleUpdateAssetButton"
                                                text="Update Asset"
                                                prefWidth="180.0" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="deleteAssetButton" disable="true"
                                                mnemonicParsing="false"
                                                onAction="#handleDeleteAssetButton"
                                                text="Delete Asset"
                                                prefWidth="180.0" />
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- ─ Contract Form Tab ────────────────────────── -->
                <Tab fx:id="contractFormTab" text="Contract Form">
                    <content>
                        <AnchorPane>
                            <children>
                                <VBox styleClass="form-container"
                                      AnchorPane.topAnchor="40.0"
                                      AnchorPane.leftAnchor="60.0"
                                      AnchorPane.rightAnchor="60.0"
                                      AnchorPane.bottomAnchor="40.0"
                                      maxWidth="420.0"
                                      spacing="2.0">
                                    <children>
                                        <Label text="CONTRACT NUMBER" />
                                        <TextField fx:id="contractNumberField" promptText="e.g. CNT-2025-001" />

                                        <Label text="ASSET ID" />
                                        <TextField fx:id="contractAssetIdField" promptText="Asset identifier" />

                                        <Label text="USER ID" />
                                        <TextField fx:id="contractUserIdField" promptText="User identifier" />

                                        <HBox spacing="16.0">
                                            <children>
                                                <VBox HBox.hgrow="ALWAYS" spacing="2.0">
                                                    <children>
                                                        <Label text="START DATE" />
                                                        <DatePicker fx:id="contractStartDatePicker" maxWidth="Infinity" />
                                                    </children>
                                                </VBox>
                                                <VBox HBox.hgrow="ALWAYS" spacing="2.0">
                                                    <children>
                                                        <Label text="END DATE" />
                                                        <DatePicker fx:id="contractEndDatePicker" maxWidth="Infinity" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>

                                        <HBox spacing="16.0">
                                            <children>
                                                <VBox HBox.hgrow="ALWAYS" spacing="2.0">
                                                    <children>
                                                        <Label text="PREMIUM AMOUNT" />
                                                        <TextField fx:id="contractPremiumField" promptText="0.00" maxWidth="Infinity" />
                                                    </children>
                                                </VBox>
                                                <VBox HBox.hgrow="ALWAYS" spacing="2.0">
                                                    <children>
                                                        <Label text="COVERAGE AMOUNT" />
                                                        <TextField fx:id="contractCoverageField" promptText="0.00" maxWidth="Infinity" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>

                                        <Label text="STATUS" />
                                        <ComboBox fx:id="contractStatusCombo" maxWidth="Infinity" />

                                        <Label text="APPROVED BY" />
                                        <TextField fx:id="contractApprovedByField" promptText="Approver name or ID" />

                                        <Region prefHeight="12.0" />

                                        <Button fx:id="contractSubmitButton" text="Submit Contract"
                                                mnemonicParsing="false"
                                                onAction="#handleContractSubmitButton"
                                                prefWidth="356.0" maxWidth="Infinity" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- ─ Contract List Tab ────────────────────────── -->
                <Tab fx:id="contractListTab" text="Contract List">
                    <content>
                        <AnchorPane>
                            <children>
                                <TableView fx:id="contractsTable"
                                           AnchorPane.topAnchor="30.0"
                                           AnchorPane.leftAnchor="40.0"
                                           AnchorPane.rightAnchor="40.0"
                                           AnchorPane.bottomAnchor="70.0">
                                    <columns>
                                        <TableColumn fx:id="contractColId" prefWidth="60.0" text="ID" visible="false" />
                                        <TableColumn fx:id="contractColNumber" prefWidth="120.0" text="Number" />
                                        <TableColumn fx:id="contractColAssetId" prefWidth="80.0" text="Asset" />
                                        <TableColumn fx:id="contractColUserId" prefWidth="80.0" text="User" />
                                        <TableColumn fx:id="contractColStart" prefWidth="100.0" text="Start" />
                                        <TableColumn fx:id="contractColEnd" prefWidth="100.0" text="End" />
                                        <TableColumn fx:id="contractColPremium" prefWidth="110.0" text="Premium" />
                                        <TableColumn fx:id="contractColCoverage" prefWidth="110.0" text="Coverage" />
                                        <TableColumn fx:id="contractColStatus" prefWidth="90.0" text="Status" />
                                        <TableColumn fx:id="contractColApprovedBy" prefWidth="100.0" text="Approved By" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>

                                <HBox spacing="12.0"
                                      AnchorPane.bottomAnchor="14.0"
                                      AnchorPane.leftAnchor="40.0"
                                      AnchorPane.rightAnchor="40.0">
                                    <children>
                                        <Button fx:id="contractUpdateButton" disable="true"
                                                mnemonicParsing="false"
                                                onAction="#handleContractUpdateButton"
                                                text="Update Contract"
                                                prefWidth="180.0" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="contractDeleteButton" disable="true"
                                                mnemonicParsing="false"
                                                onAction="#handleContractDeleteButton"
                                                text="Delete Contract"
                                                prefWidth="180.0" />
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

            </tabs>
        </TabPane>

    </children>
</VBox>
