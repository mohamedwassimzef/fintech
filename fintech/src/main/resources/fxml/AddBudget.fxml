<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.AddBudgetController"
      spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 20;">

    <Label text="Add New Budget" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <Separator/>

    <GridPane hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="100" prefWidth="120"/>
            <ColumnConstraints minWidth="200" prefWidth="300"/>
        </columnConstraints>

        <!-- Budget Name -->
        <Label text="Budget Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="e.g., Monthly Groceries"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Amount -->
        <Label text="Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="amountField" promptText="e.g., 500.00"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Category -->
        <Label text="Category:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="categoryComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"
                  prefWidth="300"/>

        <!-- Start Date -->
        <Label text="Start Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="startDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"
                    prefWidth="300"/>

        <!-- End Date -->
        <Label text="End Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <DatePicker fx:id="endDatePicker" GridPane.rowIndex="4" GridPane.columnIndex="1"
                    prefWidth="300"/>

        <!-- User ID (hidden for now, you can use logged-in user later) -->
        <Label text="User ID:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="userIdField" text="1" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: #757575; -fx-text-fill: white;"/>
        <Button text="Save Budget" onAction="#handleSave"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>

</VBox>